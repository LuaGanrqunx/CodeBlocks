/*
字元和ascii碼轉換
專案名稱：ch02_sample_2_4_2
虛擬碼：
輸入一個字元，顯示它的內碼值
輸入一個ascii值，顯示對應字元
*/
#include <iostream>

using namespace std;

int main()
{
//輸入一個字元
    cout << "請輸入一個字元：";
    char ch;
    cin >> ch;
//顯示它的內碼值
    int id = ch;
    cout << "ascii內碼值為：" << id << endl;
//輸入一個ascii值
    cout << "請輸入ascii內碼值：";
    int asciiId;
    cin >> asciiId;
//顯示對應字元
    char mapChar;
    mapChar = asciiId;
    cout << "對應字元為：" << mapChar << endl;

    return 0;
}
